
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<script src="~/Scripts/MyScripts/services.js"></script>
<script src="~/Scripts/MyScripts/controllers.js"></script>



<h2>Index</h2>

<div ng-controller="controller1">

    <h1> Persons Details Page</h1>

    <br />

    <button type="button" class="btn btn-primary" ng-click="addPerson()">Add Person</button>


    <div>
        <p>Persons List</p>
        <table class="table table-bordered table-hover">
            <thead>
                <tr class="">
                    <td><b>ID</b><span ng-click="SortBy('Id')"  class="glyphicon glyphicon-arrow-down"></span></td>
                    <td><b ng-click="SortBy('Name')">Name</b></td>
                    <td><b ng-click="SortBy('LastName')">LastName</b></td>
                    <td><b ng-click="SortBy('State')">State</b></td>
                    <td><b ng-click="SortBy('Age')">Age</b></td>
                    <td><b>Actions</b></td>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="person in persons | orderBy:Field">
                    <td>
                        {{person.Id}}
                    </td>
                    <td>
                        {{person.Name}}
                    </td>
                    <td>
                        {{person.LastName}}
                    </td>
                    <td>
                        {{person.State}}
                    </td>
                    <td>
                        {{person.Age}}
                    </td>
                    <td>
                        <button ng-click="editPerson(person)" class="btn btn-primary">Edit</button>
                        <button ng-click="deletePerson(person)" class="btn btn-primary">Delete</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div ng-show="divPerson">
        <p>{{Action}} Person</p>
        <table>
            <tr ng-hide="hidePersonId">
                <td><b>Id</b></td>
                <td>
                    <input type="text" disabled="disabled" ng-model="person.Id" />
                </td>
            </tr>
            <tr>
                <td><b>Name</b></td>
                <td>
                    <input type="text" ng-model="person.Name"/>
                </td>
            </tr>
            <tr>
                <td><b>LastName</b></td>
                <td>
                    <input type="text" ng-model="person.LastName" />
                </td>
            </tr>
            <tr>
                <td><b>State</b></td>
                <td>
                    <input type="text" ng-model="person.State" />
                </td>
            </tr>
            <tr>
                <td><b>Age</b></td>
                <td>
                    <input type="text" ng-model="person.Age" />
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <button type="button" class="btn btn-primary" ng-click="addUpdatePerson()">Save Changes</button>
                </td>
            </tr>

        </table>
    </div>


</div>

